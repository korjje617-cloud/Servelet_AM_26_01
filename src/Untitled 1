		String loginId = request.getParameter("loginId");
		
		while (true) {
			if (loginId.isEmpty()) {
				String.format("<script>alert('아이디를 작성해주세요');</script>");
			} else
				break;
		}
		
		
		String loginPw = request.getParameter("loginPw");
		String loginPwContirm = request.getParameter("loginPwConfirm");
		
		while (true) {
			if (!loginPw.equals(loginPwContirm)) {
				String.format("<script>alert('비밀번호가 다릅니다');</script>");
			} else {
				break;
			}
		}
		
		String name = request.getParameter("name");
		
		
		
		SecSql sql = SecSql.from("INSERT INTO article");
		sql.append("SET regDate = NOW(),");
		sql.append("loginId = ?,", loginId);
		sql.append("loginPw = ?;", loginPw);
		sql.append("name = ?;", name);
		
		
		int id = DBUtil.insert(conn, sql);

		response.getWriter()
				.append(String.format("<script>alert('%s 님 가입이 완료 되었습니다'); location.replace('list');</script>", name));